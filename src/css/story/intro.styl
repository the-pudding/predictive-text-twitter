.intro
	//margin 0 auto
	//padding 6rem 1rem 3rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		visibility hidden
		font-family $national
		set-type-size(xxxx-large)
		letter-spacing 0
		margin-top 3rem
		padding 2rem
		color $off-white
		line-height 1.1

		+mq('bp-2-5')
			set-type-size(xxxxx-large)			
		+mq('bp-3')
			set-type-size(x6-large)
			line-height 1.1
		+mq('bp-4')
			set-type-size(x7-large)
		+mq('bp-5')
			line-height 1.2
			set-type-size(xSUPER-large)
		&.is-visible
			visibility visible

		span
			visibility hidden
			&.is-visible
				visibility visible
		
		span.blink
			visibility hidden
			width 1px
			&.is-visible
				visibility visible
		

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	.blink
		border-right 1px solid $off-white
		animation blink 1s infinite
